<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notification_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/girl_listening_to_music"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Title"
        android:textSize="@dimen/font_size_heading_2"
        app:layout_constraintBottom_toBottomOf="@+id/notification_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notification_img"
        app:layout_constraintTop_toTopOf="@+id/notification_img" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Title"
        android:id="@+id/notification_des"
        android:textSize="@dimen/font_size_heading_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/notification_title"
        app:layout_constraintTop_toBottomOf="@+id/notification_title" />
</androidx.constraintlayout.widget.ConstraintLayout>