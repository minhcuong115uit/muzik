<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".ui.activities.MusicPlayerActivity"
    android:orientation="vertical">
    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="36dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:layout_margin="16dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Title"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/back_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_music_disc"
        android:layout_weight="1"
        android:id="@+id/fragment_container_music_disc"
        android:name="com.example.muzik.ui.fragments.MusicDisc"
        android:layout_height="wrap_content"/>
<!--    TextView Title-->
<!--    TextView ArtistName-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24sp" />

        <!-- TextView ArtistName-->
        <TextView
            android:id="@+id/artistname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:textSize="18sp" />
    </LinearLayout>


    <com.google.android.exoplayer2.ui.PlayerControlView
        android:id="@+id/player_control_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_timeout="0"
        android:layout_marginBottom="36dp"
        app:controller_layout_id="@layout/media_music_controls"
         />

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_bottom_actions_bar"
        android:id="@+id/frag_container_bottom_bar"
        android:name="com.example.muzik.ui.fragments.BottomActionsBar"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />
</LinearLayout>