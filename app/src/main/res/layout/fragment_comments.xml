<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.example.muzik.viewmodels.musicplayer.PlayerViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragments.Comments"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="/number/ bình luận "
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="32dp"
                android:textSize="@dimen/font_size_large"
                android:layout_height="50dp"/>
            <ImageButton
                android:id="@+id/close_comments"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_close"
                style="@style/ExoMediaButton"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_large"
            android:gravity="center"
            android:id="@+id/tv_empty"
            android:text="This track doesn't have any comments. Be the first!" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_commentList"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:transitionGroup="true"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:id="@+id/user_comment_avt"
                android:src="@drawable/background_image_girl_listen"
                android:layout_marginEnd="12dp"
                android:layout_height="40dp"/>
            <EditText
                android:id="@+id/edt_input"
                android:layout_width="270dp"
                android:text="@={viewmodel.commentContent}"
                android:hint="Viết bình luận..."
                style="@style/InputText"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/send_btn"
                android:onClick="@{()-> viewmodel.uploadComment()}"
                android:layout_width="wrap_content"
                android:layout_marginLeft="-30dp"
                android:src="@drawable/right_arrow"
                android:visibility="invisible"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</layout>
